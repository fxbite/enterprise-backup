<div class="row g-5">
    <div class="col-md-11 col-lg-12">
        <h4 class="mb-3">Register User</h4>
        <form class="register-account" action="/register" method="post">
            <div class="row g-3">
            <div class="col-lg-12">
                <label for="firstName" class="form-label">Name</label>
                <input type="text" class="form-control" id="userName" style="width: 50%;" placeholder="" <% if(typeof(submissions) !== 'undefined') { %>value="<%= submissions.name %>"<% } %>  name="username">
                <div class="invalid-feedback">
                </div>
            </div>

            <div class="col-sm-6">
                <label for="lastName" class="form-label">Closure Date</label>
                <input type="datetime-local" class="form-control" id="closure-date" placeholder="" <% if(typeof(submissions) !== 'undefined') { %>value="<%= submissions.closure_date %>"<% } %> name="closure_date">
                <div class="invalid-feedback">
                </div>
            </div>

            <div class="col-sm-6">
                <label for="username" class="form-label">Final Closure Date</label>
                <input type="datetime-local" class="form-control" id="final-closure-date" placeholder="" <% if(typeof(submissions) !== 'undefined') { %>value="<%= submissions.final_closure_date %>"<% } %>  name="final_closure_date">
                <div class="invalid-feedback">
                </div>
            </div>

            <div class="col-lg-12">
                <label for="email" class="form-label">Description</label>
                <textarea class="form-control" id="summernote" name="description" rows="3">
                    <% if(typeof(submissions) !== 'undefined') { %>
                        <%= submissions.description %> 
                    <% } %> 
                </textarea>
                <div class="invalid-feedback">
                </div>
            </div>
            <hr class="my-4">
            <button class="w-100 btn btn-primary btn-lg" type="submit">Create</button>
        </form>
    </div>
</div>
<!-- include libraries(jQuery, bootstrap) -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
<script defer src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script defer src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

