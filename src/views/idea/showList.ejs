<div class="row g-5">
    <div class="col-md-11 col-lg-12">
        <div class="row g-3" style="padding: 0 5px">
            <div id="tableFixHead">
                <table class="table-hover">
                    <thead>
                        <tr>
                        <th>Detail</th>
                        <th>Title</th>
                        <th>Anonymous Mode</th>
                        <th>Submission</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        <th>Total Views</th>
                        <th>Total Reaction</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(typeof(ideas) !== 'undefined' && ideas.length > 0) { %> 
                            <% ideas.forEach(idea => { %>
                                <tr>
                                    <td><a href="/idea-update/<%= idea._id %> "><i class="fa-solid fa-eye"></i></a></td>
                                    <td><%= idea.title %></td>
                                    <td><%= idea.anonymousMode %></td>
                                    <td><%= idea.submission.name %></td>
                                    <td><%= formatDateSubmission(idea.createdAt) %></td>
                                    <td><%= formatDateSubmission(idea.updatedAt) %></td>
                                    <td><%= idea.total_view %></td>
                                    <td><%= idea.total_reaction %></td>
                                    <td>
                                        <ul class="list-inline m-0">
                                            <li class="list-inline-item">
                                                <a class="btn btn-success btn-sm rounded-0" type="button" href="/idea-update/<%= idea._id %>" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></a>
                                            </li>
                                            <li class="list-inline-item">
                                                <button class="btn btn-danger btn-sm rounded-0" type="button" data-bs-toggle="modal" data-id="<%= idea._id %>" data-bs-target="#delete-idea-modal" data-placement="top" title="Delete"><i class="fa fa-trash"></i></button>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="9" style="text-align: center;">
                                    <h5 style="font-weight: 700;">No Record</h5>
                                </td>
                            </tr>
                        <% } %> 
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Confirm delete staff -->
<div id="delete-idea-modal" class="modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Are you confirm to delete this idea?</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-footer">
            <button id="btn-delete-idea" type="button" class="btn btn-danger">OK</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
      </div>
    </div>
</div>
  
