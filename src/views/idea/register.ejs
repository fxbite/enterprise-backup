
<div class="row g-5">
    <div class="col-md-11 col-lg-12">
        <h4 class="mb-3">Create Idea</h4>
        <form class="register-account" action="/register" method="post">
            <div class="row g-3">
            <div class="col-lg-12">
                <label for="firstName" class="form-label">Title</label>
                <input type="text" style="width: 50%;" class="form-control" id="userName" placeholder="" value="" name="title">
                <div class="invalid-feedback">
                </div>
            </div>

            <div class="col-sm-6">
                <label for="lastName" class="form-label">Anonymous Mode</label>
                <select class="form-select" aria-label="Default select example" name="anonymousMode">
                    <option value="" selected="" disabled=""></option>
                    <option value="true">Enable</option> 
                </select>
                <div class="invalid-feedback">
                </div>
            </div>

            <div class="col-sm-6">
                <label for="username" class="form-label">Category</label>
                <select multiple class="chosen-select form-select" name="category">
                    <option value="" selected="" disabled=""></option>
                    <% if(typeof(categories) !== 'undefined') { %>
                        <% categories.forEach(value => { %> 
                            <option value="<%= value._id %>"><%= value.name %></option>
                        <% }) %>  
                    <% } %>  
                  </select>
                <div class="invalid-feedback">
                </div>
            </div>

            <div class="col-lg-12">
                <label for="email" class="form-label">Description</label>
                <textarea class="form-control" id="summernote" name="description" rows="3"></textarea>
                <div class="invalid-feedback">
                </div>
            </div>

            <div class="col-lg-12">
                <label for="address" class="form-label">Content</label>
                <textarea class="form-control" id="summernote" name="content" rows="4"></textarea>
                <div class="invalid-feedback">
                </div>
            </div>
            <hr class="my-4">
            <button class="w-100 btn btn-primary btn-lg" type="submit">Register</button>
        </form>
    </div>
</div>
<script defer src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script defer src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js"></script>
<link href="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.min.css" rel="stylesheet"/>
<script defer src="/js/lib/chosen.js"></script>
